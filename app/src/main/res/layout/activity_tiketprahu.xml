<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tiketprahu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/border"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namamenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/donjose_black"
                android:gravity="center"
                android:text="Tiket Prahu Kaca"
                android:textColor="@color/black"
                android:textSize="10pt" />


            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/nomorantri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/monserrat_semi_bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="10pt" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/username_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <EditText
                    android:id="@+id/jumlah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/monserrat_semi_bold"
                    android:hint="Jumlah tiket"
                    android:importantForAutofill="no"
                    android:gravity="center"
                    android:inputType="textNoSuggestions|number"
                    android:textColorHighlight="@color/c1"
                    android:textSize="7pt"
                    tools:ignore="UnusedAttribute" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/simpan"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/backlogin"
                android:fontFamily="@font/donjose_black"
                android:gravity="center"
                android:text="Pesan"
                android:textColor="@color/white"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:background="@drawable/backlogin"
            android:orientation="vertical">
            <TextView
                android:id="@+id/print"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12pt"
                android:text="print"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/donjose_black"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>