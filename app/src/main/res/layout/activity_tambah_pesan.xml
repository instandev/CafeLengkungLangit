<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahPesan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:id="@+id/namamenu"
                    android:textSize="10pt"
                    android:text="nama"
                    android:textColor="@color/black"
                    android:fontFamily="@font/donjose_black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:id="@+id/hargamenu"
                    android:textSize="7pt"
                    android:textColor="@color/black"
                    android:fontFamily="@font/monserrat_semi_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="left"
                    android:id="@+id/terjualmenu"
                    android:textSize="7pt"
                    android:textColor="@color/black"
                    android:fontFamily="@font/monserrat_semi_bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="left"
                    android:id="@+id/bulanini"
                    android:textSize="7pt"
                    android:textColor="@color/black"
                    android:fontFamily="@font/monserrat_semi_bold"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/username_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginBottom="20dp">

                    <EditText
                        android:id="@+id/jumlah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/monserrat_semi_bold"
                        android:hint="Jumlah Pesanan"
                        android:importantForAutofill="no"
                        android:inputType="textNoSuggestions|number"
                        android:textColorHighlight="@color/c1"
                        android:textSize="7pt"
                        tools:ignore="UnusedAttribute" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/simpan"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/backlogin"
                    android:fontFamily="@font/donjose_black"
                    android:gravity="center"
                    android:text="Pesan"
                    android:textColor="@color/white" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/discon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/dis0"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/backlogin"
                        android:fontFamily="@font/donjose_black"
                        android:gravity="center"
                        android:text="normal"
                        android:textSize="8pt"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/dis10"
                        android:layout_marginStart="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/backlogin"
                        android:fontFamily="@font/donjose_black"
                        android:gravity="center"
                        android:text="Disc 50%"
                        android:textSize="8pt"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_marginStart="10dp"
                        android:id="@+id/dis20"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/backlogin"
                        android:fontFamily="@font/donjose_black"
                        android:gravity="center"
                        android:text="Disc 20%"
                        android:textSize="8pt"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pesan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30% Hanya Jam 08:00 s/d 10:00"
                        android:textColor="@color/black"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/dis50"
                        android:layout_marginStart="0dp"
                        android:layout_width="130dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/backlogin"
                        android:fontFamily="@font/donjose_black"
                        android:gravity="center"
                        android:text="Disc 30%"
                        android:textSize="8pt"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>